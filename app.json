{
  "expo": {
    "name": "Furkan",
    "slug": "Furkan",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "furkan",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": false,
    "ios": {
      "newArchEnabled": false,
      "supportsTablet": true,
      "runtimeVersion": {
        "policy": "appVersion"
      },
      "bundleIdentifier": "com.riadp1.Quran"
    },
    "android": {
      
      "permissions": [
        "android.permission.FOREGROUND_SERVICE",
        "FOREGROUND_SERVICE",
        "android.permission.RECORD_AUDIO",
        "android.permission.MODIFY_AUDIO_SETTINGS"
         
        
      ],
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.riadp1.Quran",
      "runtimeVersion": "1.0.0"
    },
    "web": {
      "bundler": "metro",
      "enabled": false,
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      [
        "expo-router",
        {
          "origin": "https://node-1-gtzm.onrender.com"
        }
      ],
      [
        "@stripe/stripe-react-native",
        {
          "merchantIdentifier": "merchant.com.furkanApp",
          "publishableKey": "pk_live_51Qx6WlKIGwNk6vSfewuYLo7tqMlm5t7YDvlKwrmhbvJka612oP474cJPteSkdqERfWw2acJ7fPnSO3R4P6HhcEc3004QRGAm2O"
        }
      ],
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash.png",
          "imageWidth": 144,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      [
        "expo-screen-orientation",
        {
          "initialOrientation": "DEFAULT"
        }
      ],
      [
        "expo-audio",
        {
          "microphonePermission": "Allow $(PRODUCT_NAME) to access your microphone."
        }
      ],
      "expo-font",
      [
        "expo-notifications"
      ],
      "expo-video"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "updates": {
